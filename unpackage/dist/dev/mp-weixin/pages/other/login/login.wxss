}
.swiper-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 640rpx;
	height: 800rpx;
	padding-top: 30rpx;
	padding-bottom: 30rpx;
	border-radius: 20rpx;
	margin-top: 80rpx;

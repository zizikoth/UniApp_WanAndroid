
.filter-container {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-right: 30rpx;
	margin-left: 30rpx;
	width: calc(100% - 60rpx);
}
.filter-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
	margin-top: 30rpx;
	font-size: 36rpx;
	font-weight: bold;
	text-align: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.filter-label {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding-left: 20rpx;
	margin-top: 20rpx;
	height: 40rpx;
	color: #333333;
	font-size: 30rpx;
	border-left: solid #333333 10rpx;
}
.filter-group {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 30rpx;
	margin-top: 20rpx;
}
.filter-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-right: 20rpx;
	margin-top: 10rpx;
}
.filter-submit {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
	height: 80rpx;
	border-radius: 10rpx;
	background-color: #000000;
	margin-bottom: 30rpx;
	margin-top: 20rpx;
	color: #ffffff;
	font-size: 34rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}

